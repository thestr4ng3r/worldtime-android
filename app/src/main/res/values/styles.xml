<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@color/toolbar_foreground</item>
    </style>

    <style name="AppTheme.Drawer">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarEditText" parent="AppTheme">
        <item name="colorControlNormal">@color/toolbar_foreground</item>
        <item name="colorControlActivated">@color/toolbar_foreground</item>
        <item name="colorControlHighlight">@color/toolbar_foreground</item>
        <item name="android:textColorHint">#b3ffffff</item>
        <item name="android:editTextColor">@color/toolbar_foreground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
